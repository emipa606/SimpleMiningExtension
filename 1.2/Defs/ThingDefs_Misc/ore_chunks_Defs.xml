  <ThingDef ParentName="ResourceBase">
    <defName>ChunkIronOre</defName>
    <label>iron ore</label>
    <description>A piece of iron ore. It's useless in its current form, it can be smelted to aquire puryfied ore.</description>
    <stuffProps>
      <categories>
        <li>Ores</li>
      </categories>
      <color>(226,72,24)</color>
    </stuffProps>
    <stackLimit>200</stackLimit>
    <deepCommonality>4</deepCommonality>
    <deepCountPerPortion>60</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>20</min>
      <max>40</max>
    </deepLumpSizeRange>
    <graphicData>
      <texPath>orechunks/iron_chunk</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <useHitPoints>false</useHitPoints>
