<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>PrimitiveRadar</defName>
    <label>adobe-brick making spot</label>
    <description>A place for crafting simple bricks</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/CraftingSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Floor</altitudeLayer>
    <size>(1,1)</size>
    <terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
  </ThingDef>
  <ThingDef ParentName="BuildingBase">
    <defName>BrickSpot</defName>
    <label>adobe-brick making spot</label>
    <description>A place for crafting simple bricks</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/CraftingSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Floor</altitudeLayer>
    <statBases>
      <WorkToBuild>50</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <size>(1,1)</size>
    <terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
    <costList>
      <WoodLog>15</WoodLog>
    </costList>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
    <recipes>
      <li>MakeRawAdobe</li>
    </recipes>
  </ThingDef>
  <!-- ==================== Mining Nodes ====================== -->
  <ThingDef ParentName="BuildingBase">
    <defName>AbadonedPlatform</defName>
    <label>Abadoned Mine</label>
    <thingClass>oreprocessing.AbadonedMineClass</thingClass>
    <description>An abadoned empty mine. Bugs still can occasionally crawl out of it.</description>
    <tickerType>Rare</tickerType>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>Things/Buildings/AbadonedPlatform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4.5,4.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <size>(5,5)</size>
    <passability>PassThroughOnly</passability>
    <surfaceType>Item</surfaceType>
    <building>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <deconstructible>false</deconstructible>
    </building>
  </ThingDef>
  <ThingDef ParentName="BuildingBase">
    <defName>MiningPlatform</defName>
    <label>Mine</label>
    <description>A place for mining basic ores and coal. Needs to be rebuilt after depletion.</description>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <costList>
      <WoodLog>150</WoodLog>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>Things/Buildings/MiningPlatform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(6,6)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <WorkToBuild>9500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <size>(5,5)</size>
    <rotatable>false</rotatable>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <researchPrerequisites>
      <li>MiningRes</li>
    </researchPrerequisites>
    <surfaceType>Item</surfaceType>
    <building>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <deconstructible>false</deconstructible>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_CreatesInfestations" />
      <li Class="oreprocessing.CompProperties_MineShaft">
        <mineableList>
          <li>
            <OreLevel>15</OreLevel>
            <thingDef>Jade</thingDef>
            <yield>30</yield>
            <chance>20</chance>
          </li>
          <li>
            <OreLevel>20</OreLevel>
            <thingDef>ChunkPlasteelOre</thingDef>
            <yield>20</yield>
            <chance>20</chance>
          </li>
          <li>
            <OreLevel>20</OreLevel>
            <thingDef>ChunkUraniumOre</thingDef>
            <yield>20</yield>
            <chance>25</chance>
          </li>
          <li>
            <OreLevel>30</OreLevel>
            <thingDef>ChunkGoldOre</thingDef>
            <yield>30</yield>
            <chance>30</chance>
          </li>
          <li>
            <OreLevel>30</OreLevel>
            <thingDef>ChunkSilverOre</thingDef>
            <yield>35</yield>
            <chance>35</chance>
          </li>
          <li>
            <OreLevel>40</OreLevel>
            <thingDef>ChunkIronOre</thingDef>
            <yield>30</yield>
            <chance>80</chance>
          </li>
          <li>
            <OreLevel>35</OreLevel>
            <thingDef>Coal</thingDef>
            <yield>45</yield>
            <chance>90</chance>
          </li>
        </mineableList>
      </li>
    </comps>
    <placeWorkers>
      <li>oreprocessing.PlaceWorker_MiningSource</li>
    </placeWorkers>
  </ThingDef>
  <!-- ==================== Smelters and stuff ====================== -->
  <ThingDef ParentName="BenchBase">
    <defName>FueledKlin</defName>
    <label>smelting klin</label>
    <description>A coal fueled kiln, smelts metals with low efficiency.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Things/Buildings/Furnace/Furnace</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.3,1.4)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>SmeltIronOreChunkPrimitive</li>
      <li>SmeltSilverOreChunkPrimitive</li>
      <li>SmeltGoldOreChunkPrimitive</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>160.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Coal</li>
            <li>Charcoal</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>9</heatPerSecond>
        <heatPushMaxTemperature>60</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>4</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
    </comps>
    <rotatable>true</rotatable>
    <building>
      <workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>false</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.85</heatPerTickWhileWorking>
    </building>
  </ThingDef>
  <ThingDef ParentName="BenchBase">
    <defName>RichOreMill</defName>
    <label>rare ore refiniery</label>
    <description>An electric device, which is used for refining the rarest of ores.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Things/Buildings/Forge/Forge</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
      <Steel>120</Steel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.7</Flammability>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>SmeltUraniumOreChunk</li>
      <li>SmeltPlasteelOreChunk</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>750</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <researchPrerequisites>
      <li>AdvancedSmelting</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>