    <defName>SmeltIronOreChunk</defName>
    <label>refine steel ore</label>
    <description>With use of compounds and heat refine iron chunk into useful metal</description>
    <jobString>Smelting metal from chunk.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkIronOre</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CoalOre</li>
            <li>CharCoalOre</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <Steel>35</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkIronOre</li>
        <li>CoalOre</li>
        <li>CharCoalOre</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
